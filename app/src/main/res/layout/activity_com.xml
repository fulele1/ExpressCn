<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_com"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xaqb.policescan.Activity.ComActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/abc_action_bar_content_inset_material"
        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="共查询到"
        />
        <TextView
        android:id="@+id/tv_count_com_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/viewfinder_laser"
        />
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="条数据"
        />
    </LinearLayout>

    <LinearLayout style="@style/common_horizontal_division_line_style" />

    <ListView
        android:id="@+id/list_com"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>

</LinearLayout>
