<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_totle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xaqb.policescan.Activity.TotalActivity">

    <ImageView

        android:id="@+id/imageView_query"
        android:layout_width="match_parent"
        android:layout_height="@dimen/logo"
        android:scaleType="fitXY"
        android:src="@mipmap/logo" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_edge"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_user_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_edge"
            android:gravity="center"
            android:text="@string/order_id"
            android:textColor="#000000"
            android:textSize="@dimen/textview_normal_size" />

        <EditText
            android:id="@+id/et_order_total"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="10px"
            android:hint="@string/input_order_id"
            android:paddingLeft="10px"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="@dimen/textview_small_size" />

        <ImageView
            android:id="@+id/iv_zxing"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_edge"
            android:src="@mipmap/zxing"
            android:layout_gravity="center"/>
            />
    </LinearLayout>

    <LinearLayout style="@style/common_horizontal_division_line_style" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/abc_action_bar_content_inset_material"
        >

        <TextView
            android:id="@+id/txt_per_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="快递员查询"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/btn_pressed"
            android:drawableTop="@mipmap/search"
            />


        <TextView
            android:id="@+id/txt_com_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="快递企业查询"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/btn_pressed"
            android:drawableTop="@mipmap/com"
            />
    </LinearLayout>


